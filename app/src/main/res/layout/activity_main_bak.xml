<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/coffee_wallpaper"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_1"
        android:padding="@dimen/btn_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/teh" />

    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_2"
        android:padding="@dimen/btn_padding"
        android:layout_toRightOf="@+id/btn_1"
        android:background="@drawable/teh_ping" />

    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_3"
        android:padding="@dimen/btn_padding"
        android:layout_toRightOf="@+id/btn_2"
        android:background="@drawable/teh_o" />

    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_4"
        android:padding="@dimen/btn_padding"
        android:layout_toRightOf="@+id/btn_3"
        android:background="@drawable/kopi" />

    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_5"
        android:padding="@dimen/btn_padding"
        android:layout_below="@+id/btn_1"
        android:background="@drawable/kopi_ping" />
    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_6"
        android:padding="@dimen/btn_padding"
        android:layout_toRightOf="@+id/btn_5"
        android:layout_below="@+id/btn_1"
        android:background="@drawable/kopi_o" />
    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_7"
        android:padding="@dimen/btn_padding"
        android:layout_toRightOf="@+id/btn_6"
        android:layout_below="@+id/btn_1"
        android:background="@drawable/coke" />
    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_8"
        android:padding="@dimen/btn_padding"
        android:layout_toRightOf="@+id/btn_7"
        android:layout_below="@+id/btn_1"
        android:background="@drawable/ice_lemon_tea" />

    <ImageButton
        android:layout_width="@dimen/square_side"
        android:layout_height="@dimen/square_side"
        android:id="@+id/btn_9"
        android:padding="@dimen/btn_padding"
        android:layout_below="@+id/btn_5"
        android:background="@drawable/jiajia" />
</RelativeLayout>
